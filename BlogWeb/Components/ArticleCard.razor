@page "/card-component"

<div class="card">
    <img src="images/Knight.jpg" alt="Card image" class="card-image">
    <div class="card-content">
        <div class="card-title">Card Title</div>
        <div class="card-description">Card description goes here.</div>
    </div>
</div>

<style>
    .card {
        display: flex;
        flex-direction: row;
        align-items: center;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 16px;
        max-width: 400px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-image {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        margin-right: 16px;
    }

    .card-content {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .card-title {
        font-size: 1.2em;
        font-weight: bold;
        margin-bottom: 8px;
    }

    .card-description {
        font-size: 1em;
        color: #555;
    }
</style>


